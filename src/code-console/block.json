{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "triskelion/code-console",
	"version": "1.0.0",
	"title": "Code Console",
	"category": "formatting",
	"icon": "terminal",
	"description": "Terminal con pestañas para documentación técnica.",
	"attributes": {
		"tabs": {
			"type": "array",
			"default": [
				{ "title": "index.js", "language": "javascript", "content": "" }
			]
		},
		"activeTabIndex": {
			"type": "number",
			"default": 0
		}
	},
	"supports": {
		"html": false,
		"anchor": true
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./editor.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php"
}
